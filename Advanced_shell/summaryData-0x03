#!/bin/bash
# Script to summarize PokÃ©mon data and calculate averages

output_file="pokemon_report.csv"
data_dir="pokemon_data"

# Check if the directory exists
if [ ! -d "$data_dir" ]; then
  echo "Error: $data_dir directory not found!"
  exit 1
fi

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$output_file"

# Loop through all JSON files
for file in "$data_dir"/*.json; do
  # Extract values using grep/sed
  name=$(grep '"name"' "$file" | head -1 | sed 's/.*"name": "\(.*\)".*/\1/')
  height=$(grep '"height"' "$file" | sed 's/.*"height": \([0-9.]*\).*/\1/')
  weight=$(grep '"weight"' "$file" | sed 's/.*"weight": \([0-9.]*\).*/\1/')
  
  echo "$name,$height,$weight" >> "$output_file"
done

# Display success message
echo "CSV Report generated at: $output_file"
echo

# Calculate averages using awk
awk -F',' 'NR>1 { total_h+=$2; total_w+=$3; count++ }
END {
  printf "Average Height: %.2f m\n", total_h/count
  printf "Average Weight: %.2f kg\n", total_w/count
}' "$output_file"